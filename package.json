{
    "version": "0.1.0",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/esm/index.mjs",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "build": "ts-build build",
        "lint": "ts-build lint",
        "prepare": "git config core.hookspath .githooks && ts-build build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "test": "jest",
        "betterer": "betterer --strict",
        "prettier": "prettier --write src/**/*"
    },
    "husky": {
        "hooks": {
            "pre-commit": "eslint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "exports": {
        ".": {
            "import": "./dist/esm/index.mjs",
            "require": "./dist/cjs/index.cjs",
            "default": "./dist/cjs/index.cjs"
        }
    },
    "name": "@azlabsjs/rx-query",
    "author": "azandrew-sidoine",
    "size-limit": [
        {
            "path": "dist/cjs/index.cjs",
            "limit": "10 KB"
        },
        {
            "path": "dist/esm/index.mjs",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@azlabsjs/ts-build": "^0.2.1",
        "@betterer/cli": "^5.4.0",
        "@betterer/typescript": "^5.4.0",
        "@size-limit/preset-small-lib": "^8.1.0",
        "@types/jest": "^29.2.4",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "jest-watch-typeahead": "^2.2.1",
        "prettier": "^2.8.1",
        "rxjs": "^7.8.0",
        "size-limit": "^8.1.0",
        "ts-jest": "^29.0.3",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4"
    },
    "peerDependencies": {
        "rxjs": "^7.8.0"
    },
    "dependencies": {
        "@azlabsjs/functional": "^0.1.11",
        "@azlabsjs/rx-hooks": "^0.1.15",
        "@azlabsjs/utilities": "^0.1.11"
    }
}
